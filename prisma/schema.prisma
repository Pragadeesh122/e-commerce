generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

model Product{
  id String @id @default(cuid())
  productName String @unique
  size String[]
  price Float
  description String
  image String
}

model User{
  id String @id @default(cuid())
  email String @unique
  password String
  name String 
}